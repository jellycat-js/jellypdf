{
	"name": "jellypdf",
	"version": "0.1.0",
	"description": "Flexible PDF generation from HTML or URLs, available as a CLI tool or embeddable Node.js library.",
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/jellypdf.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./handlers/*": {
			"import": "./dist/esm/handlers/*",
			"require": "./dist/cjs/handlers/*",
			"types": "./dist/types/handlers/*.d.ts"
		}
	},
	"files": [
		"dist/"
	],
	"bin": {
		"jellypdf-cli": "./dist/cli/jellypdf-cli.js"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"start": "node ./dist/cli/jellypdf-cli.js",
		"clean": "rimraf dist",
		"prepare": "npm run clean && npm run build",
		"build": "rollup -c rollup.config.ts --bundleConfigAsCjs",
		"build:watch": "rollup -c rollup.config.ts --bundleConfigAsCjs --watch",
		"lint": "eslint --config eslint.config.ts ./src --ext .ts",
		"dev": "tsx src/bin/cli.ts",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"playwright-chromium": "^1.52.0",
		"puppeteer": "^24.7.2",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@rollup/plugin-commonjs": "^28.0.3",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/jest": "^29.5.14",
		"@types/mock-fs": "^4.13.4",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.26.0",
		"eslint-plugin-import": "^2.31.0",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"jiti": "^2.4.2",
		"mock-fs": "^5.5.0",
		"rimraf": "^6.0.1",
		"rollup": "^4.40.1",
		"ts-jest": "^29.3.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.1"
	},
	"keywords": [
		"cli",
		"pdf",
		"puppeteer",
		"playwright",
		"html-to-pdf",
		"pdf-generator"
	],
	"author": "CXXI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ton-org/jellypdf.git"
	},
	"bugs": {
		"url": "https://github.com/ton-org/jellypdf/issues"
	},
	"homepage": "https://github.com/ton-org/jellypdf#readme"
}
